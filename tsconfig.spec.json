{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.d.ts",
    "projects/**/*.spec.ts",
    "projects/**/*.test.ts"
  ],
  "exclude": [
    "src/main.server.ts",
    "src/server.ts",
    "**/*.server.ts",
    "dist/**"
  ]
}
